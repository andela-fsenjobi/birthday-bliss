<div class="row">
  <div class="col m4">
    <div class="collection">
      <a href="#!" class="collection-item active">‎₦ 20,000</a>
      <a href="#!" class="collection-item">Profile</a>
      <a href="#!" class="collection-item">Friend List</a>
      <a href="#!" class="collection-item">My Wallet</a>
      <a href="#!" class="collection-item">Gift Shop</a>
      <a href="#!" class="collection-item">Wish List</a>
      <a href="#!" class="collection-item">Invite Friends</a>
    </div>
  </div>
  <div class="col m4">
    <h5>Your Profile</h5>
    <div class="row">
        <div class="row">
          <div class="col s12">
            Name: <%= @profile.username %>
          </div>
        </div>
        <div class="row">
          <div class="col s12">
            Birthday: <%= @profile.birthday %>
          </div>
        </div>
        <div class="row">
          <div class="col s12">
            Phone Number: <%= @profile.phone %>
          </div>
        </div>
        <div class="row">
          <div class="col s12">
            Location: <%= @profile.city %>
          </div>
        </div>
        <div class="row">
          <div class="col s12">
            Email Address: <%= @profile.email %>
          </div>
        </div>
        <div class="row">
          <div class="col s12">
            Bio: <%= @profile.bio %>
          </div>
        </div>
    </div>

  </div>
  <div class="col m4">
    <ul class="collection">
      <li class="collection-item avatar">
        <img src="<%= @profile.user.image %>" alt="" class="circle">
        <span class="title"><%= @profile.user.name %></span>
        <p> @<%= @profile.username %><br />
          <small><%= @profile.birthday.strftime('%B %d') %></small>
        </p>
        <a href="#!" class="secondary-content"><i class="material-icons">add</i></a>
      </li>
    </ul>

    <div>
      <div class="row">
        <div class="input-field col s12">
          <%= text_area_tag "wiwsh", nil, class:"materialize-textarea" %>
          <label for="bio">Wish me a happy birthday</label>
          <%= submit_tag "Send wish", class:"btn" %>
          <button class="btn"><i class="material-icons">shopping_cart</i> Buy a gift</button>
        </div>
      </div>
    </div>

  </div>
</div>
